<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Elastic\AppSearch\Client\ClientConfigurationInterface" type="Elastic\AppSearch\Client\ClientConfiguration" />

    <preference for="Elastic\AppSearch\Model\Adapter\EngineInterface" type="Elastic\AppSearch\Model\Adapter\Engine" />
    <preference for="Elastic\AppSearch\Model\Adapter\EngineResolverInterface" type="Elastic\AppSearch\Model\Adapter\EngineResolver" />
    <preference for="Elastic\AppSearch\Model\Adapter\EngineManagerInterface" type="Elastic\AppSearch\Model\Adapter\EngineManager" />

    <preference for="Elastic\AppSearch\Model\Adapter\Document\SyncManagerInterface" type="Elastic\AppSearch\Model\Adapter\Document\SyncManager" />
    <preference for="Elastic\AppSearch\Model\Adapter\Document\BatchDataMapperResolverInterface" type="Elastic\AppSearch\Model\Adapter\Document\BatchDataMapperResolver" />

    <preference for="Elastic\AppSearch\Model\Adapter\Engine\SchemaInterface" type="Elastic\AppSearch\Model\Adapter\Engine\Schema" />
    <preference for="Elastic\AppSearch\Model\Adapter\Engine\SchemaResolverInterface" type="Elastic\AppSearch\Model\Adapter\Engine\SchemaResolver" />
    <preference for="Elastic\AppSearch\Model\Adapter\Engine\Schema\BuilderInterface" type="Elastic\AppSearch\Model\Adapter\Engine\Schema\Builder" />
    <preference for="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldMapperResolverInterface" type="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldMapperResolver" />
    <preference for="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldNameResolverInterface" type="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldName\DefaultResolver" />
    <preference for="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldTypeResolverInterface" type="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldType\DefaultResolver" />

    <preference for="Elastic\AppSearch\SearchAdapter\Request\QueryLocatorInterface" type="Elastic\AppSearch\SearchAdapter\Request\QueryLocator" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\SearchParamsProviderInterface" type="Elastic\AppSearch\SearchAdapter\Request\SearchParamsProvider" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\Fulltext\QueryTextResolverInterface" type="Elastic\AppSearch\SearchAdapter\Request\Fulltext\QueryTextResolver" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilterBuilderInterface" type="Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilterBuilder" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\Filter\FilterBuilderInterface" type="Elastic\AppSearch\SearchAdapter\Request\Filter\FilterBuilder" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\Facet\FacetBuilderInterface" type="Elastic\AppSearch\SearchAdapter\Request\Facet\FacetBuilder" />
    <preference for="Elastic\AppSearch\SearchAdapter\Request\RescorerResolverInterface" type="Elastic\AppSearch\SearchAdapter\Request\RescorerResolver" />

    <preference for="Magento\Search\Api\SearchInterface" type="Elastic\AppSearch\Model\Search" />

    <type name="Magento\Config\Model\Config\TypePool">
        <arguments>
            <argument name="sensitive" xsi:type="array">
                <item name="elastic_appsearch/client/api_key" xsi:type="string">1</item>
            </argument>
            <argument name="environment" xsi:type="array">
                <item name="elastic_appsearch/client/api_endpoint" xsi:type="string">1</item>
                <item name="elastic_appsearch/client/is_debug" xsi:type="string">1</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Search\Model\Adminhtml\System\Config\Source\Engine">
        <arguments>
            <argument name="engines" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Elastic App Search</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\CatalogSearch\Model\ResourceModel\EngineProvider">
        <arguments>
            <argument name="engines" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Magento\Elasticsearch\Model\ResourceModel\Engine</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Search\Model\EngineResolver">
        <arguments>
            <argument name="engines" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">elastic_appsearch</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Search\Model\AdapterFactory">
        <arguments>
            <argument name="adapters" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Elastic\AppSearch\SearchAdapter\Adapter</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\CatalogSearch\Model\Indexer\IndexerHandlerFactory">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Elastic\AppSearch\Model\Indexer\IndexerHandler</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\CatalogSearch\Model\Indexer\IndexStructureFactory">
        <arguments>
            <argument name="structures" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Elastic\AppSearch\Model\Indexer\IndexStructure</item>
            </argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\Model\Adapter\Engine\SchemaResolver">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="catalogsearch_fulltext" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\SchemaProvider</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\SchemaProvider" type="Elastic\AppSearch\Model\Adapter\Engine\Schema\CompositeSchemaProvider">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="base" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\BaseSchemaProvider\Proxy</item>
                <item name="attributes" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\AttributeSchemaProvider\Proxy</item>
                <item name="price" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\PriceSchemaProvider\Proxy</item>
                <item name="categories" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\Product\CategorySchemaProvider\Proxy</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldMapperResolver">
        <arguments>
            <argument name="fieldMappers" xsi:type="array">
                <item name="catalogsearch_fulltext" xsi:type="object">Elastic\AppSearch\Model\Adapter\Engine\Schema\FieldMapper</item>
            </argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\Model\Adapter\Document\BatchDataMapperResolver">
        <arguments>
            <argument name="mappers" xsi:type="array">
                <item name="catalogsearch_fulltext" xsi:type="object">Elastic\AppSearch\Model\Adapter\Document\BatchDataMapper\Product</item>
            </argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\Model\Adapter\Document\BatchDataMapper\Product">
        <arguments>
            <argument name="attributeMapper" xsi:type="object">Elastic\AppSearch\Model\Adapter\Document\BatchDataMapper\Product\AttributeMapper</argument>
            <argument name="additionalDataProviders" xsi:type="array">
                <item name="categoryData" xsi:type="object">Elastic\AppSearch\Model\Adapter\Document\BatchDataMapper\Product\CategoryDataProvider</item>
                <item name="priceData" xsi:type="object">Elastic\AppSearch\Model\Adapter\Document\BatchDataMapper\Product\PriceDataProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\Model\Search">
       <arguments>
            <argument name="searchResponseBuilder" xsi:type="object">Elastic\AppSearch\Search\SearchResponseBuilder</argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\SearchAdapter\Request\RescorerResolver">
        <arguments>
            <argument name="rescorers" xsi:type="array">
                <item name="default" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Rescorer\DefaultRescorer</item>
                <item name="catalog_view_container" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Rescorer\Product\CategoryPositionRescorer</item>
            </argument>
        </arguments>
    </type>

    <virtualType name="Elastic\AppSearch\SearchAdapter\Request\QueryLocator\CategoryFilter" type="Elastic\AppSearch\SearchAdapter\Request\QueryLocator">
        <arguments>
          <argument name="queryName" xsi:type="string">category</argument>
        </arguments>
    </virtualType>

    <type name="Elastic\AppSearch\SearchAdapter\Request\Rescorer\Product\CategoryPositionProvider">
        <arguments>
          <argument name="queryLocator" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\QueryLocator\CategoryFilter</argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\SearchAdapter\Request\SearchParamsProvider">
        <arguments>
            <argument name="providers" xsi:type="array">
                <item name="page" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Page\SearchParamsProvider</item>
                <item name="filters" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\SearchParamsProvider</item>
                <item name="search_fields" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Fulltext\SearchParamsProvider</item>
                <item name="facets" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Facet\SearchParamsProvider</item>
                <item name="sorts" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Sort\SearchParamsProvider</item>
            </argument>
        </arguments>
    </type>

    <type name="Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilterBuilder">
      <arguments>
          <argument name="builderFactories" xsi:type="array">
              <item name="boolQuery" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilter\BoolQueryFilterBuilderFactory</item>
              <item name="matchQuery" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilter\MatchQueryFilterBuilderFactory</item>
              <item name="filteredQuery" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\QueryFilter\FilteredQueryFilterBuilderFactory</item>
          </argument>
      </arguments>
    </type>

    <type name="Elastic\AppSearch\SearchAdapter\Request\Filter\FilterBuilder">
      <arguments>
          <argument name="builderFactories" xsi:type="array">
              <item name="boolFilter" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\Filter\BoolFilterBuilderFactory</item>
              <item name="termFilter" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\Filter\TermFilterBuilderFactory</item>
              <item name="rangeFilter" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\Filter\RangeFilterBuilderFactory</item>
              <item name="wildcardFilter" xsi:type="object">Elastic\AppSearch\SearchAdapter\Request\Filter\Filter\WildcardFilterBuilderFactory</item>
          </argument>
      </arguments>
    </type>

    <virtualType name="Magento\CatalogSearch\Model\ResourceModel\Fulltext\CollectionFactory" type="Magento\Catalog\Model\ResourceModel\Product\CollectionFactory">
        <arguments>
            <argument name="instanceName" xsi:type="string">Elastic\AppSearch\Model\ResourceModel\Product\Fulltext\Collection</argument>
        </arguments>
    </virtualType>

    <virtualType name="Magento\CatalogSearch\Model\ResourceModel\Fulltext\SearchCollection" type="Elastic\AppSearch\Model\ResourceModel\Product\Fulltext\Collection">
        <arguments>
            <argument name="searchRequestName" xsi:type="string">quick_search_container</argument>
        </arguments>
    </virtualType>

    <type name="Magento\AdvancedSearch\Model\SuggestedQueries">
        <arguments>
            <argument name="data" xsi:type="array">
                <item name="elastic_appsearch" xsi:type="string">Magento\AdvancedSearch\Model\DataProvider\Suggestions</item>
            </argument>
        </arguments>
    </type>
    
    <type name="Magento\CatalogSearch\Model\Search\RequestGenerator">
        <plugin name="elastic_app_search_custom_request" type="Elastic\AppSearch\Plugin\Model\Search\RequestGeneratorPlugin" />
    </type>

</config>
